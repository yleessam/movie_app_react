import React from 'react';
class App extends React.Component{
  constructor(props){
    super(props);
    console.log('hello...')
  }
  state = {
    count: 0
  };
  add = () => {
    console.log('add');
    this.setState({count: this.state.count+1});
  };
  minus = () => {
    console.log('minus');
    this.setState({count: this.state.count-1});
  };

  render(){
    return (<div><h1>state number is : {this.state.count}</h1>
                  <button onClick={this.add}>Add</button>
                  <button onClick={this.minus}>Minus</button>
            </div>);
  }
  componentDidUpdate(){
    console.log('componentDidUpdated after rendered')
  }
  componentDidMount(){
    console.log('component mounted after rendered')
  }
  componentDidUnMount(){
    console.log('goodbye...')
  }
  
}
export default App;